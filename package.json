{
  "name": "mdos-web",
  "version": "0.0.1",
  "description": "The frontend of MDoS exposed to the world - includes user, rights and access management",
  "main": "main.js",
  "scripts": {
    "start": "node .",
    "dev": "nodemon . & npm run watch:css",
	"build" : "npm run build:css",
    "build:css": "node-sass public/css/mdos.scss public/css/mdos.css",
    "watch:css": "node-sass public/css/mdos.scss -wo public/css/",
	"install" : "npm run build && pm2 start main.js --name mdos && pm2 save",
	"remove" : "pm2 stop mdos && pm2 delete mdos && pm2 save",
    "usermanager": "node bin/usermanager.js"
  },
  "repository": {
    "type": "git",
    "url": "github.com:maschinendeck/mdos-web.git"
  },
  "author": "Michael Ochmann <miko@maschinendeck.org>",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "chalk": "^4.1.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-jwt": "^6.1.0",
    "jsonwebtoken": "^8.5.1",
    "sequelize": "^6.6.5",
    "sqlite3": "^5.0.2"
  },
  "devDependencies": {
    "inquirer": "^8.1.5",
    "node-sass": "^6.0.1",
    "nodemon": "^2.0.12"
  }
}
